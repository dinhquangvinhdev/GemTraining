<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.TestForegroundActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="15dp">

    <EditText
        android:id="@+id/edt_input_data"
        android:layout_width="match_parent"
        android:layout_height="80dp"/>

    <Button
        android:id="@+id/btn_run_foreground_service"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Run Foreground Service"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/btn_stop_foreground_service"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Stop Foreground Service"
        android:textSize="20sp"/>

</LinearLayout>