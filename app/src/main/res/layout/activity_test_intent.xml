<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.TestIntentActivity">

    <TextView
        android:id="@+id/tv_intentExplicit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open SplashActivity"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_intentExplicit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Intent Explicit"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="@id/tv_intentExplicit"
        app:layout_constraintStart_toStartOf="@id/tv_intentExplicit"
        app:layout_constraintTop_toBottomOf="@+id/tv_intentExplicit"/>

    <TextView
        android:id="@+id/tv_intentImplicit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Intent Implicit : Send Mail"
        app:layout_constraintEnd_toEndOf="@id/btn_intentExplicit"
        app:layout_constraintStart_toStartOf="@id/btn_intentExplicit"
        app:layout_constraintTop_toBottomOf="@id/btn_intentExplicit"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/btn_intentImplicit1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Mail"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="@id/tv_intentImplicit"
        app:layout_constraintStart_toStartOf="@id/tv_intentImplicit"
        app:layout_constraintTop_toBottomOf="@+id/tv_intentImplicit" />

    <Button
        android:id="@+id/btn_intentImplicit2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="open another app"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_intentImplicit1"
        app:layout_constraintStart_toStartOf="@+id/btn_intentImplicit1"
        app:layout_constraintTop_toBottomOf="@+id/btn_intentImplicit1" />
</androidx.constraintlayout.widget.ConstraintLayout>