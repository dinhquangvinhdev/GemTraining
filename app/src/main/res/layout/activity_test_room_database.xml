<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.TestRoomDatabaseActivity">

    <TableLayout
        android:id="@+id/tbl_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:stretchColumns="0,1,2,3">
        <TableRow>
            <TextView
                android:text="ID"
                android:gravity="center"
                android:background="#C7C9CA"
                android:textColor="#000000"/>
            <TextView
                android:text="Name"
                android:gravity="center"
                android:background="#C7C9CA"
                android:textColor="#000000"/>
            <TextView
                android:text="Price"
                android:gravity="center"
                android:background="#C7C9CA"
                android:textColor="#000000"/>
            <TextView
                android:text="Quantity"
                android:gravity="center"
                android:background="#C7C9CA"
                android:textColor="#000000"/>
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:id="@+id/ll_ui"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="top|center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tbl_data">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="id"
                android:layout_weight="1"
                android:gravity="center"/>
            <EditText
                android:id="@+id/edt_item_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Name Item"
                android:layout_weight="1"
                android:gravity="center"/>
            <EditText
                android:id="@+id/edt_item_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Price"
                android:layout_weight="1"
                android:gravity="center"/>
            <EditText
                android:id="@+id/edt_item_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Quantity"
                android:layout_weight="1"
                android:gravity="center"/>
            <EditText
                android:id="@+id/edt_item_quantity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_query_an_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get an item"
                android:onClick="getAnItem"/>

            <Button
                android:id="@+id/btn_query_items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get all item"
                android:onClick="getAllItem"/>

            <Button
                android:id="@+id/btn_add_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add an item"
                android:onClick="addAnItem"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_update_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update an item"
                android:onClick="updateAnItem"/>

            <Button
                android:id="@+id/btn_delete_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete an item"
                android:onClick="deleteAnItem"/>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>